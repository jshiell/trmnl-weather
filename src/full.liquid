<div class="layout layout--col layout--stretch">
    <div class="flex flex--row flex--stretch">
        <div>
            {{ current.weather_code}}
        </div>
        <div>
            {{ current.temperature_2m }}{{ current_units.temperature_2m }}<br>
            Temperature<br>
            {{ current.sunrise }} {{ current.sunset }}<br>
            {{  current.wind_speed_10m }}{{ current_units.wind_speed_10m }} {{ current.wind_direction_10m }}
        </div>
        <div class="flex flex--col flex--stretch">
            <div>
                {{ current.apparent_temperature }}{{ current_units.apparent_temperature }}<br>
                Feels Like
            </div>
            <div>
                {{ current.relative_humidity_2m }}{{ current_units.relative_humidity_2m }}<br>
                Humidity
            </div>
            <div>
                {{ current.weather_code }}<br>
            </div>
        </div>
    </div>
    <div class="flex flex--row flex--stretch">
        <div class="flex flex--col flex--stretch">
            <div>
                {{  daily.weather_code[0] }}
                Today
            </div>
            <div>
                {{  daily.weather_code[1] }}
                Tomorrow
            </div>
        </div>
        <div class="flex flex--col flex--stretch">
            <div class="flex flex--row flex--stretch">
                <div>{{ daily.uv_index_max[0] }}<br>UV</div>
                <div>{{ daily.precipitation_probability_max[0] }}{{ daily_units.precipitation_probability_max }}</div>
            </div>
            <div class="flex flex--row flex--stretch">
                <div>{{ daily.uv_index_max[1] }}<br>UV</div>
                <div>{{ daily.precipitation_probability_max[1] }}{{ daily_units.precipitation_probability_max }}</div>
            </div>
        </div>
        <div class="flex flex--col flex--stretch">
            <div class="flex flex--row flex--stretch">
                <div>{{ daily.temperature_2m_min[0] }}{{ daily_units.temperature_2m_min }}<br>Min</div>
                <div>{{ daily.temperature_2m_max[0] }}{{ daily_units.temperature_2m_max }}<br>Max</div>
            </div>
            <div class="flex flex--row flex--stretch">
                <div>{{ daily.temperature_2m_min[1] }}{{ daily_units.temperature_2m_min }}<br>Min</div>
                <div>{{ daily.temperature_2m_max[1] }}{{ daily_units.temperature_2m_max }}<br>Max</div>
            </div>
        </div>
    </div>
</div>
<div class="title_bar">
    <span class="title">Weather</span>
    <span class="instance">Where? ({{  current.time | date: "%H:%M" }})</span>
</div>
